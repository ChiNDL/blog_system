<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
   
    <%= f.text_area :content, placeholder: "what is your opinion..." %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  <%= f.submit "Comment", class: "btn btn-primary" %>
<% end %>